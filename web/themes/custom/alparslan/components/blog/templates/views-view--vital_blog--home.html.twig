{{ attach_library('alparslan/blog') }}
{{ attach_library('alparslan/bs.buttons') }}

{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ] 
%}
<div class="d-flex justify-content-center">
	<div {{ attributes.addClass(classes).addClass("alparslan-blog") }}>
		{{ title_prefix }}
		{{ title }}
		{{ title_suffix }}

		{% if header %}
			<div class="mt-5 mb-3 d-flex justify-content-center">
				{{ header }}
			</div>
		{% endif %}

		{{ exposed }}

		{{ attachment_before }}

		<div class="row">
			<div class="col-md-6">
				{% if rows -%}
					{{ rows }}
				{% elseif empty -%}
					{{ empty }}
				{% endif %}
				{{ pager }}
			</div>

			<div class="col-md-6 d-flex flex-column justify-content-between">
				{{ attachment_after }}
			</div>
		</div>

		{{ more }}

		{% if footer %}
			<div class="mt-4 mb-5 d-flex justify-content-center">
				{{ footer }}
			</div>
		{% endif %}

		{{ feed_icons }}
	</div>
</div> 
