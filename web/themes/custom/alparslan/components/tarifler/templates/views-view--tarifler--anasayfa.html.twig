{{ attach_library('alparslan/tarifler') }}
{{ attach_library('alparslan/bs.buttons') }}

{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{attributes.addClass(classes).addClass('tarifler-anasayfa')}}>
	{{ title_prefix }}
	{{ title }}
	{{ title_suffix }}

	{% if header %}
		<header>
			{{ header }}
		</header>
	{% endif %}

	{{ exposed }}
	{{ attachment_before }}

	{% if rows -%}
		{{ rows }}
	{% elseif empty -%}
		{{ empty }}
	{% endif %}
	{{ pager }}

	{{ attachment_after }}
	{{ more }}

	{% if footer %}
		<footer>
			{{ footer }}
		</footer>
	{% endif %}

	{{ feed_icons }}
</div>