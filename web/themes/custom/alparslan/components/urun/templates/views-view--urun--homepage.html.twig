{{ attach_library('alparslan/urun') }}
{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title }}
	{{ title_suffix }}

	{% if header %}
		<header>
    <div class="mt-5 mb-3 d-flex justify-content-center">
			{{ header }}
    </div>
    </header>
	{% endif %}

	{{ exposed }}
	{{ attachment_before }}

	{% if rows -%}
  <div class="d-flex justify-content-center mt-5 mb-5">
		<div class="card home-card">
			<div class="card-body">
        {{ rows }}
			</div>
		</div>
    </div>
	{% elseif empty -%}
		{{ empty }}
	{% endif %}
	{{ pager }}

	{{ attachment_after }}
	{{ more }}

	{% if footer %}
		<footer>
			{{ footer }}
		</footer>
	{% endif %}

	{{ feed_icons }}
</div>
